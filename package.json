{
  "name": "weedo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "NODE_ENV=test nyc mocha dist/test --recursive",
    "update-coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dev": "nodemon dist/src/index.js",
    "build": "tsc && npm run build:ts && npm run build:css",
    "watch": "tsc -w & npm run watch:ts & npm run watch:css",
    "build:ts": "webpack",
    "watch:ts": "nodemon -e ts --watch public/scripts -x \"npm run build:ts\"",
    "build:css": "node-sass --include-path public/css public/css/main.scss public/css/main.css",
    "watch:css": "nodemon -e scss --watch public/css -x \"npm run build:css\"",
    "migrate-up": "db-migrate up",
    "migrate-reset": "db-migrate reset"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/express": "^4.0.34",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.48",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "db-migrate": "^0.10.0-beta.20",
    "db-migrate-pg": "^0.1.11",
    "mocha": "^3.1.2",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "nyc": "^9.0.1",
    "supertest": "^2.0.1",
    "ts-loader": "^1.2.2",
    "ts-node": "^1.7.0",
    "tslint": "^3.15.1",
    "typescript": "^2.1.1",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "express": "^4.14.0",
    "pg-promise": "^5.3.6",
    "pug": "^2.0.0-beta6"
  }
}
