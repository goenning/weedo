{
    "extends": "tslint:latest",
    "rules": {
      "interface-name": [
          true,
          "never-prefix"
      ],
      "no-console": [
        false
      ],
      "member-ordering": [
        false
      ],
      "quotemark": [
        true, "single"
      ],
      "no-reference": false, //remove when pg-promise#238 is merged
      "no-var-requires": false, //remove when pg-promise#238 is merged
      "no-string-literal": false,
      "ordered-imports": false,
      "object-literal-sort-keys": false,
      "trailing-comma": [true, {"multiline": "never", "singleline": "never"}]
    }
}